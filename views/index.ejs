<%-include('_header')%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style defer>
    *,*::after,*::before{
        box-sizing: border-box;
        margin: 0px;
    }
    .inl{
        display: inline-block;
    }    
    .shado{
       filter: grayscale(.5);
       transition: ease-in-out 0.5s;
    }
    .shado:hover{
        filter: grayscale(0);
      
        transform: scale(1.2);
    }
    
</style>

    <title>Document</title>
</head>
<body style="background-color:#0F0E0E;">
    <div>
        <%-include('_navbar')%>
        <div class="container ">
        <div>
    <% docs.forEach(function(x){ %> 
    <div class="inl  bg-secondary rounded-2  m-5" style="background-color:black ;">
      <div class="shado">
         <div class="card rounded-2 bg-light border-dark " style="width: 18rem; ">
            
            <img src="<%= x.image %> " style='height:10rem' class="card-img-top "  alt="...">
           
            <div class="card-body" style="background-color:#8B9A46 ;">
               
                    
              <h5 class="card-title"><%=x.name  %> </h5>
              <ul>
                <li>
                    <p class="card-text"><%= x.description %> </p>
            </li>
            <li>
                <p class="card-text"><%= x.price %> </p>
                
                <form action="cart" method="post">
                    <input type="hidden" name="name" value="<%= x.name %> ">
                    <input type="hidden" name="price" value="<%= x.price%> ">
                    <label for="<%=x.quantity%>">Quantity:</label>
                    <input type="number" id="<%= x.quantity %>" name="quantity" value="1" min="1" max="10">
                    <input type="hidden" name="userId" value="<%= user.email%> ">
                    <input type="hidden" name="buyer" value="<%= user.name%> ">
                    <input type="hidden" name="address" value="<%= user.address%> ">
                    <input type="hidden" name="phone" value="<%= user.phone%> ">
                     <button type="submit" class="rounded-2" style="background-color:#541212 ; color:#EEEE ;"  >Cart</button>
                  
                   
                </form>
              
              
            </li>
            </ul>
            </div>
        </div>
     </div>
    </div>
    <% }) %> 
  
        </div>
    </div>
    
</body>
</html>